<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Finder-like Sidebar • Home, Wishlist, Folders</title>
  <link rel="stylesheet" href="" />
</head>
<body>
  <div class="app">
    <!-- Sidebar -->
    <aside class="sidebar" aria-label="Sidebar">
      <div class="section-label">Favorites</div>
      <nav class="nav" aria-label="Primary">
        <!-- Home -->
        <a class="item" href="#" aria-current="page">
          <!-- Look-alike Home icon -->
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
               stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M3 11l9-8 9 8"></path>
            <path d="M9 22V12h6v10"></path>
          </svg>
          <span>Home</span>
        </a>
        <!-- Wishlist -->
        <a class="item" href="#">
          <!-- Look-alike Heart icon -->
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
               stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M20.8 6.6a5.5 5.5 0 0 0-7.8 0L12 7.6l-1-1a5.5 5.5 0 0 0-7.8 7.8l1 1L12 22l7.8-6.6 1-1a5.5 5.5 0 0 0 0-7.8z"></path>
          </svg>
          <span>Wishlist</span>
        </a>
      </nav>

      <div class="section-label">Folders</div>
      <div class="folders" role="list">
        <!-- Folder 1 -->
        <a class="item" href="#" role="listitem">
          <!-- Look-alike Folder icon -->
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
               stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M3 7h6l2 3h10v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7z"></path>
          </svg>
          <span>Folder A</span>
        </a>
        <!-- Folder 2 -->
        <a class="item" href="#" role="listitem">
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
               stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M3 7h6l2 3h10v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7z"></path>
          </svg>
          <span>Folder B</span>
        </a>
        <!-- Folder 3 -->
        <a class="item" href="#" role="listitem">
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
               stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M3 7h6l2 3h10v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7z"></path>
          </svg>
          <span>Folder C</span>
        </a>
      </div>
    </aside>

    <!-- Content -->
    <main class="content" aria-label="Content area">
      <div class="crumbs thin" aria-label="Breadcrumb">
        <span>Locations</span>
        <span aria-hidden="true">›</span>
        <b>Home</b>
      </div>

      <section class="grid" aria-label="Items">
        <div class="tile">Sample content</div>
        <div class="tile">Add your files here</div>
        <div class="tile">Cards simulate Finder content</div>
        <div class="tile">No JS required</div>
      </section>
    </main>
  </div>
</body>
</html>
